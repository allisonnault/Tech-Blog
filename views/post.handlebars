<div class="container-fluid single-post">
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{postData.title}}</h5>
      <p class="card-text">{{postData.body}}</p>
      <p class="card-text">By: {{postData.user.username}}</p>
      <p class="card-text">{{format_date postData.createdAt}}</p>
    </div>
  </div>
</div>

{{!-- add comment: --}}
<div class="container-fluid">
  <div class="input-group mb-5 mt-5">
    <input type="text" class="form-control" placeholder="Add a comment..." aria-label="Add a comment..."
      id="commentBody">
    <button data-id="{{postData.id}}" id="submit" type="submit" class="btn  btn-outline-secondary">Submit</button>
  </div>
</div>
{{!-- Comments --}}
<div class="container-fluid">
  <h5>Comments:</h5>
  {{#each postData.comments as |comment|}}
  <div class="card mb-3">
    <div class="card-body">
      <p class="card-text">{{comment.user.username}}: "{{comment.body}}"</p>
      <p class="card-text">{{format_date comment.createdAt}}</p>
    </div>
  </div>
  {{/each}}
</div>

<script src="/js/comment.js"></script>