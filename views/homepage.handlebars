
<div class="container-fluid blog-posts">
    {{#if loggedIn}}
    {{#each posts as |post|}}
    <div class="card mb-3 shadow">
        <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
            <p class="card-text">{{post.body}}</p>
            <a type="button" href="/api/posts/{{post.id}}"class="btn btn-primary comment">View Post</a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <br><br><br>
    <div class="row justify-space-between-md">
        <div class="row justify-content-evenly">
            {{!-- login --}}
            <div class="col-4">
            <div class="login-card col">
                <h2 class="card-title text-center">Login</h2>
                <br>
                <form class="login-form">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="user-login">Username:</label>
                        <input class="form-control" type="text" id="user-login" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="password-login">Password:</label>
                        <input class="form-control" type="password" id="password-login" />
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-block mb-4 shadow" type="submit">login</button>
                    </div>
                </form>
            </div>
            </div>
            {{!-- signup --}}
            <div class="col-4">
            <div class="login-card col">
                <h2 class="card-title text-center">Sign Up</h2>
                <br>
                <form class="signup-form">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="username-signup">Username:</label>
                        <input class="form-control" type="text" id="username-signup"/>
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="password-signup">Password:</label>
                        <input class="form-control" type="password" id="password-signup"/>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-block mb-4 shadow" type="submit">sign up</button>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </div>

    {{/if}}
    
</div>

<script src="/js/login.js"></script>
