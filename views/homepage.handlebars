<div class="container-fluid blog-posts">
    {{#each posts as |post|}}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
            <p class="card-text">{{post.body}}</p>
            {{#if loggedIn}}
            <button data-id="{{post.id}}" id="comment" type="button" class="btn btn-primary">Comment</button>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>
<div class="row">
    <div class="container">

    </div>
</div>